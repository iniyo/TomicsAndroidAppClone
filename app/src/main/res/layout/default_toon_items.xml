<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_default_toon_size"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:paddingBottom="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_toon_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/tomics_gray"
        android:importantForAccessibility="no"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_toon_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_toon_img"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity=""
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_episodes"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_toon_title"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:text=""
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_toon_type"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_toon_title"
        android:layout_toEndOf="@+id/tv_episodes"
        android:gravity="center"
        android:text="toon type"
        android:textColor="@color/tomics_default_tag_color"
        android:textSize="12sp" />
</RelativeLayout>
