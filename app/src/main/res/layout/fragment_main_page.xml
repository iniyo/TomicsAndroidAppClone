<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.fragment.MainPageFragment">

    <data>
        <variable
            name="main_fragment_view_model"
            type="com.example.tomicsandroidappclone.presentation.ui.viewmodel.MainFragmentViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:background="#780C0C"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_page"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</layout>