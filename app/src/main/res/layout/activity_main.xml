<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.tomicsandroidappclone.presentation.viewmodel.BaseViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/main_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.base.BaseActivity"
        tools:openDrawer="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageButton
                    android:id="@+id/iv_drawer"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@color/white"
                    android:src="@drawable/drawer_tab_icon" />

                <ImageView
                    android:id="@+id/iv_tomics_logo"
                    android:layout_width="140dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tomics_logo" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bookmark_icon" />

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cache_icon" />

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/serch_icon" />

            </androidx.appcompat.widget.Toolbar>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tb_main"
                app:tabRippleColor="@null"
                app:tabIndicatorAnimationDuration="0"
                app:tabBackground="@color/white">

            </com.google.android.material.tabs.TabLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fcv_main"
                android:name="com.example.tomicsandroidappclone.presentation.fragment.MainPageFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:id="@+id/nav_drawer"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header_userlogin"
            app:menu="@menu/navigation_drawer_menu"/>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>