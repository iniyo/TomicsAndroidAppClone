<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/iv_toon_img"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_hot_27x16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_toon_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_toon_img"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity=""
        android:maxLines="1"
        android:text="키다리 아가씨"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_episodes"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_toon_title"
        android:layout_marginEnd="6dp"
        android:text="28화"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_toon_type"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_toon_title"
        android:layout_toRightOf="@+id/tv_episodes"
        android:gravity="center"
        android:text="드라마"
        android:textColor="@color/tomics_default_tag_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_toon_type"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity=""
        android:maxLines="1"
        android:text="#태그 #태그 #태그"
        android:textColor="@color/tomics_default_tag_color"
        android:textSize="12sp" />
</RelativeLayout>