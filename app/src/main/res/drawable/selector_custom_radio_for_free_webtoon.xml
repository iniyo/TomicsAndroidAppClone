<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="16dp" android:height="16dp"/>
                    <solid android:color="@color/tomics_red"/>
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/light_gray"/> <!-- 여백 색상 -->
                </shape>
            </item>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/tomics_red"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
        <shape android:shape="oval">
            <size android:width="16dp" android:height="16dp"/>
            <solid android:color="@color/light_gray"/>
            <stroke android:width="1.5dp" android:color="@color/black"/>
        </shape>
    </item>
</selector>
